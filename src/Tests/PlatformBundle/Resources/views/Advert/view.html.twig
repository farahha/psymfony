
{% extends "TestsPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block testsplatform_body %}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}


    {% if advert.image is not null %}
    <img 
      src="{{ asset(advert.image.webPath) }}"
      alt="{{ advert.image.alt }}"
    />
    {% endif %}

    <h2>{{ advert.title }}</h2>

    <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

    <div class="well">
        {{ advert.content }}
    </div>
    {% if advertSkills|length > 0 %}
    <div>
        Cette annonce requiert les compétences suivantes :
        <ul>
        {% for advertSkill in advertSkills %}
            <li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
        {% endfor %}
        </ul>
    </div>
    {% endif %}
    <div>
        Cette annonce a reçu <b>{{ applications|length }}</b> candidatures.
    </div>

    <p>
        <a href="{{ path('tests_platform') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
        <a href="{{ path('tests_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('tests_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'annonce
        </a>
    </p>

{% endblock %}