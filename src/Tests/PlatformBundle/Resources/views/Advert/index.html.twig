{# src/Tests/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "TestsPlatformBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block testsplatform_body %}

<h4>Liste des annonces (Template action)</h4>
{% if nbAdverts != 0 %}
<p>Vous avez <b>{{ nbAdverts }}</b> annonces, dont les dernières sont : </p>
{% endif %}
<ul>
{% for advert in listAdverts %}
    <li>
    <a href="{{ path('tests_platform_view', {'id': advert.id}) }}">
      {{ advert.title }}
    </a>
    par {{ advert.author }},
    le {{ advert.date|date('d/m/Y') }}
    {% if advert.updated != null %}
    - modifiée le {{ advert.updated|date('d/m/Y') }}
    {% endif %}
    </li>
{% else %}
    <li>Pas d'annonces</li>
{% endfor %}
</ul>

{% if test is defined and test != null %}
{{ dump(test) }}
{% endif %}

<ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('tests_platform', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
{% endblock %}
